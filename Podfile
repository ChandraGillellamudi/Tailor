source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!
inhibit_all_warnings!

target "Tailor-iOS" do
  platform :ios, '9.2'
  pod 'Tailor', path: '.'
end

target "Tailor-iOS-Tests" do
  platform :ios, '9.2'
  pod 'Tailor', path: '.'
end

target "Tailor-Mac" do
  platform :osx, '10.11'
  pod 'Tailor', path: '.'
end

target "Tailor-Mac-Tests" do
  platform :osx, '10.11'
  pod 'Tailor', path: '.'
  pod 'Sugar'
end
